doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title StaySmart Header
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css")
    link(rel="stylesheet" href="css/styles.css")
  body
    header.d-flex.justify-content-between.align-items-center.p-3
      .d-flex.align-items-center
        img(src="images/logo.png" alt="StaySmart Logo" style="height: 40px;" class="mr-2")
        h1.h4.mb-0.text-dark StaySmart

      if user
        .btn-group
          button.btn.btn-info.dropdown-toggle(data-toggle="dropdown") User Options
          .dropdown-menu
            a.dropdown-item(href="/profile") Profile
            a.dropdown-item(href="/logout") Logout
      else
        .btn-group
          a#loginBtn.btn.btn-primary.mr-2(href="/login") Login
          a#signupBtn.btn.btn-secondary Signup

    //- Main Content
    block content

    //- Footer
    footer.text-center.mt-5.p-3.bg-light
      p © 2024 StaySmart. All rights reserved.
      a(href="/terms") Terms
      | ·
      a(href="/privacy") Privacy

    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
    script(src='/js/bundle.js')